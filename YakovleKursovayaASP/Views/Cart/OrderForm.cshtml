
<div class="orderForm">
    <form action="#" method="post">
        <div class="checkout-single-wrapper">
            <div class="checkout-single boxshado-single">
                <h4>Детали заказа</h4>
                <div class="">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Фамилия*</span>
                                <input type="text" name="user-first-name" id="userFirstName" required=""
                                       placeholder="Фамилия">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Имя*</span>
                                <input type="text" name="user-last-name" id="userLastName" required=""
                                       placeholder="Имяя">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Отчество</span>
                                <input name="company-name" id="companyname" placeholder="Отчество">
                            </div> 
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Адрес*</span>
                                <input name="user-address" id="userAddress"
                                       placeholder="Адрес">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Город*</span>
                                <input name="user-address" id="userAddress2"
                                       placeholder="Город">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Номер телефона*</span>
                                <input name="phone" id="phone" placeholder="Номер телефона">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Email адрес*</span>
                                <input name="email" id="email22" placeholder="mail">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-check payment-save">
                                <input type="checkbox" class="form-check-input" name="save-for-next" id="saveForNext111">
                                <label for="saveForNext">Сохранить для будущих</label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Комментарии</span>
                                <textarea name="notes" id="notes"
                                          placeholder="Комментарии."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="theme-btn" type="button" onclick="freezOrder()" style="min-width: 200px; margin-bottom: 10px;">Подтвердить</button>
        <button href="#" class="theme-btn" onclick="cancelOrder()" style="min-width: 200px;">Отменить</button>
    </form>
</div>