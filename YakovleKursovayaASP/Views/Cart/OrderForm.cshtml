@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
<div class="orderForm">
    <form action="#" method="post" id="FormOrder">
        <div class="checkout-single-wrapper">
            <div class="checkout-single boxshado-single">
                <h4>Детали заказа</h4>
                <div class="">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Фамилия*</div>
                                <input type="text" name="user-first-name" id="userFirstName" required
                                       placeholder="Фамилия"
                                       value="@User.FindFirstValue("Surname")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Имя*</div>
                                <input type="text" name="user-last-name" id="userLastName" required
                                       placeholder="Имя"
                                       value="@User.FindFirstValue("Name")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Отчество</div>
                                <input name="company-name" id="companyname" placeholder="Отчество"
                                       value="@User.FindFirstValue("Patronymic")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Адрес*</div>
                                <input name="user-address" id="userAddress"
                                       placeholder="Адрес" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Город*</div>
                                <input name="user-city" id="userAddress2"
                                       placeholder="Город" required
                                       value="@User.FindFirstValue("City")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Номер телефона*</div>
                                <input name="phone" id="phone" placeholder="Номер телефона" required
                                       value="@User.FindFirstValue("Phone")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <div>Email адрес*</div>
                                <input name="email" id="email22" placeholder="mail" required
                                       value="@User.FindFirstValue("Mail")">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="input-single">
                                <span>Комментарии</span>
                                <textarea name="notes" id="notes"
                                          placeholder="Комментарии."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="theme-btn" type="button" onclick="freezOrder()" style="min-width: 200px; margin-bottom: 10px;">Подтвердить</button>
        <button type="button" class="theme-btn" onclick="cancelOrder()" style="min-width: 200px;">Отменить</button>
    </form>
</div>